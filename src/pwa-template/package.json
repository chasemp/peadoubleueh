{
  "name": "pwa-template",
  "version": "1.0.0",
  "description": "A comprehensive PWA template with all best practices learned from multiple projects",
  "main": "src/index.html",
  "scripts": {
    "dev": "npx serve src -p 3000",
    "build": "npm run clean && npm run build:assets && npm run build:html",
    "clean": "rm -rf docs/*",
    "build:assets": "cp -r src/* docs/",
    "build:html": "node scripts/build-html.js",
    "preview": "npx serve docs -p 3001",
    "deploy": "npm run build && git add docs/ && git commit -m 'Build for production' && git push",
    "test": "echo 'No tests specified' && exit 0"
  },
  "keywords": [
    "pwa",
    "progressive-web-app",
    "template",
    "best-practices",
    "mobile-first"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "serve": "^14.2.1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/pwa-template.git"
  },
  "homepage": "https://yourusername.github.io/pwa-template/",
  "engines": {
    "node": ">=18.0.0"
  }
}
