{
  "name": "pwa-template",
  "version": "1.0.0",
  "description": "A comprehensive PWA template with all best practices learned from multiple projects",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build && node scripts/generate-build-info.js",
    "preview": "vite preview --port 3457",
    "test": "echo 'No tests specified' && exit 0",
    "setup-hooks": "node scripts/setup-pre-commit-hook.js",
    "port": "echo 'This project runs on port 3456 (see PORT_REGISTRY.md)'",
    "port:check": "lsof -i :3456 || echo 'Port 3456 is free'",
    "port:kill": "lsof -ti :3456 | xargs kill -9 2>/dev/null || echo 'No process on port 3456'",
    "port:force": "npm run port:kill && npm run dev",
    "ports": "bash scripts/check-ports.sh",
    "ports:kill": "bash scripts/kill-port.sh"
  },
  "keywords": [
    "pwa",
    "progressive-web-app",
    "template",
    "best-practices",
    "mobile-first"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "vite": "^5.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/chasemp/peadoubleueh.git"
  },
  "homepage": "https://pea.523.life/",
  "engines": {
    "node": ">=18.0.0"
  }
}
